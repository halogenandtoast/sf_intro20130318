<%= @deck.name %>

<%= link_to "Add card", new_deck_card_path(@deck) %>

<% @cards.each do |card| %>
  <div>
    <%= link_to card.front, [@deck, card] %>
    -
    <%= link_to "Edit", edit_deck_card_path(@deck, card) %>
    <%= link_to "Delete", [@deck, card], method: :delete, confirm: "Are you sure?" %>
  </div>
<% end %>
